{
    "name": "NatureData",
    "n_gpu": 1,

    "arch": {
        "type": "GraphSynergy",
        "args": {
            "emb_dim": 64,
            "n_hop": 2,
            "l1_decay": 1e-6,
            "therapy_method": "transformation_matrix" 
        }
    },
    "data_loader_train": {
        "type": "DataLoader",
        "args":{
            "data_dir": "baselines/GraphSynergy-master/data_ours/fold0/train",
            "aux_data_dir": "baselines/GraphSynergy-master/data_ours",
            "batch_size": 512,
            "score": "synergy 0",
            "n_hop": 2,
            "n_memory": 128,
            "shuffle": true,
            "validation_split": 0,
            "test_split": 0,
            "num_workers": 2
        }
    },
    "data_loader_test": {
        "type": "DataLoader",
        "args":{
            "data_dir": "baselines/GraphSynergy-master/data_ours/fold0/test",
            "aux_data_dir": "baselines/GraphSynergy-master/data_ours",
            "batch_size": 512,
            "score": "synergy 0",
            "n_hop": 2,
            "n_memory": 128,
            "shuffle": false,
            "validation_split": 0,
            "test_split": 0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 1e-4,
            "amsgrad": true
        }
    },
    "loss": "bce_withlogits_loss",
    "metrics": [
        "accuracy", "bacc", "roc_auc", "pr_auc", "precision", "recall", "f1_score", "tpr", "kappa"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 20,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "baselines/GraphSynergy-master/data_ours/fold0/saved/",
        "save_period": 100,
        "verbosity": 2, 
        "monitor": "max roc_auc",
        "early_stop": 10,
        "tensorboard": false
    }
}
